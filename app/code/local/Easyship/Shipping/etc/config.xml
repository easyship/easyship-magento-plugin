<?xml version="1.0"?>
<config>
    <modules>
        <Easyship_Shipping>
            <version>0.1.0</version>
        </Easyship_Shipping>
    </modules>
    <global>
        <models>
            <easyship>
                <class>Easyship_Shipping_Model</class>
            </easyship>
        </models>

        <resources>
            <easyship_setup>
                <setup>
                    <module>Easyship_Shipping</module>
                </setup>    
            </easyship_setup>
        </resources>
        <helpers>
            <easyship>
                <class>Easyship_Shipping_Helper</class>
            </easyship>
        </helpers>
        <blocks>
            <easyship>
                <class>Easyship_Shipping_Block</class>
            </easyship>
        </blocks>
    </global>
    <default>
        <carriers>
            <easyship>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <allowed_methods>easyship</allowed_methods>
                <title>Easyship</title>
                <model>easyship/carrier</model>
                <easyship_oauth_url> https://auth.easyship.com/oauth2/token </easyship_oauth_url>
                <easyship_api_url>https://api.easyship.com/rate/v1/rates</easyship_api_url>
                <easyship_stage_oauth_url>https://auth-staging.easyship.com/oauth2/token</easyship_stage_oauth_url>
                <easyship_stage_api_url>https://api-staging.easyship.com/rate/v1/rates</easyship_stage_api_url>
                <token backend_model="adminhtml/system_config_backend_encrypted" />
                <apikey backend_model="adminhtml/system_config_backend_encrypted"/>
                <apisecret backend_model="adminhtml/system_config_backend_encrypted"/>
                <shipment_requesttype>0</shipment_requesttype>
            </easyship>    
        </carriers>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <easyship_options>
                                            <title>Easyship Settings</title>
                                        </easyship_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>